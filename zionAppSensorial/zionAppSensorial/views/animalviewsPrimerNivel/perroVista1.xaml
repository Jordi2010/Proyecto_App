<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zionAppSensorial.views.animalviews.Pantalla1">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <StackLayout Orientation="Horizontal">
                <StackLayout HorizontalOptions="Start">
                    <ImageButton Source="iconosalida.png" 
                 Aspect="Fill" 
                 HeightRequest="35" 
                 WidthRequest="35" 
                 BorderColor="Transparent"
                 BackgroundColor="White" 
                 Padding="0" 
                 Margin="12,0,0,0" 
                 Clicked="OnExitButtonClicked"/>
                </StackLayout>
            </StackLayout>

            <Label Text="PUNTAJE" FontSize="25" TextColor="Black" HorizontalOptions="Center" Padding="35"/>
            <Label Text="0" HorizontalTextAlignment="Center" FontSize="50" TextColor="Black"/>
            <ImageButton Source="dog.jpg" Aspect="Fill" HeightRequest="205" WidthRequest="200" HorizontalOptions="CenterAndExpand"
                         Command="{Binding DogImageClickedCommand}"/>

            <Label Text="Le gusta jugar, también ladrar y cuidar la casa cuando los amos no están" 
                   HorizontalTextAlignment="Center" TextColor="Black" Padding="25" FontSize="Body"/>
            <Button x:Name="PerroButton" Text="Perro" HorizontalOptions="CenterAndExpand" TextColor="Black" BackgroundColor="{Binding CorrectButtonColor}" 
                    BorderWidth="2" CornerRadius="15" WidthRequest="200" HeightRequest="50" Command="{Binding PerroButtonClickedCommand}"/>
            <Button x:Name="GatoButton" Text="Gato" HorizontalOptions="CenterAndExpand" TextColor="Black" BackgroundColor="{Binding GatoButtonColor}" 
                    BorderWidth="2" CornerRadius="15" WidthRequest="200" HeightRequest="50" Command="{Binding IncorrectButtonCommand}" CommandParameter="Gato"/>
            <Button x:Name="TortugaButton" Text="Tortuga" HorizontalOptions="CenterAndExpand" TextColor="Black" BackgroundColor="{Binding TortugaButtonColor}"
                    BorderWidth="2" CornerRadius="15" WidthRequest="200" HeightRequest="50" Command="{Binding IncorrectButtonCommand}" CommandParameter="Tortuga"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
