<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zionAppSensorial.views.pantallas.inicio">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Image Source="MyIcono" Aspect="Fill" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
       HeightRequest="225" WidthRequest="225" />
            <!-- Creando eventos de click-->
            <Button Text="Jugar" BackgroundColor="Yellow" TextColor="Black" FontSize="20"
                    CornerRadius="15" WidthRequest="200" HeightRequest="60"
                    HorizontalOptions="Center"
                    Clicked="OnPlayButtonClicked"/>

            <Button Text="Cómo jugar?" TextColor="White" FontSize="20"
                    BackgroundColor="Blue"
                    CornerRadius="15" WidthRequest="300" HeightRequest="60"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnHowToPlayButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>