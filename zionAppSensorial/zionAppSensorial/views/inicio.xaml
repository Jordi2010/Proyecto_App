<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zionAppSensorial.views.pantallas.inicio">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Image Source="MyIcono" Aspect="Fill" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
       HeightRequest="225" WidthRequest="225" />

            <ImageButton Source="imageJugar" Aspect="Fill"
        CornerRadius="15" WidthRequest="200" HeightRequest="60"
        HorizontalOptions="Center"/>

            <ImageButton Source="howplay.png" 
        CornerRadius="15" WidthRequest="300" HeightRequest="60"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="CenterAndExpand"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>